{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./http/*"]
    },
    "lib": ["dom", "es2018"],
    "types": ["jest", "node"]
  },
  "include": ["http/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
