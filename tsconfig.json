{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "inlineSources": false
  },
  "include": ["http/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
